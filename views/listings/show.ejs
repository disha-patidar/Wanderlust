<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-3">
        <h3  class="mt-3">Listing Details: </h3>
      </div>
  <div class="card col-6 offset-3 show-cards mt-3">
    <div class="card" style="width: 18rem;">
  <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
      <b><%= listing.title  %></b> <br/>
<%= listing.description %> <br/>
<%= listing.location  %> <br/>
  <%= listing.title  %> <br/>
&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %> <br/>
<%= listing.country %> <br/>
    </p>
  </div>
</div>
  </div>
  <br>
  
  </div>
  <div class="btns">
<a href="/listings/<%= listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3 mb-5">Edit</a>
 <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-dark del-btn offset-5 mb-5">Delete</button>
  </form>
  </div>
</body>
